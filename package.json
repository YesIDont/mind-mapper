{
    "name": "mindmapeditor",
    "version": "0.1.0",
    "private": true,
    "homepage": "mindmapeditor.dysonspheregames.com/",
    "dependencies": {
        "mobx": "^6.0.4",
        "mobx-react": "^7.0.5",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-is": "^17.0.1",
        "react-router-dom": "^6.4.1",
        "request-animation-frame-polyfill": "^1.0.2",
        "styled-components": "^5.1.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/node": "^14.14.10",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router": "^5.1.11",
        "@types/react-router-dom": "^5.3.3",
        "@types/styled-components": "^5.1.1",
        "commitizen": "^4.0.3",
        "eslint": "^7.14.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.2",
        "prettier": "^2.0.5",
        "prettier-eslint": "^12.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "pretty-quick": "^3.1.0",
        "react-scripts": "4.0.1",
        "stylelint": "^13.8.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.10.0",
        "stylint": "^2.0.0",
        "tsc-files": "^1.1.3",
        "typescript": "^4.1.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "release": "standard-version",
        "lint": "eslint --ext ts,tsx src/ && stylelint **/*.styled.{ts,tsx}",
        "lint-single": "eslint --ext ts,tsx",
        "type-check": "tsc-files --noEmit --pretty"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn type-check"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,json}": "pretty-quick --staged",
        "*.{ts,tsx}": [
            "eslint --ext ts,tsx src/"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./apps/node_modules/cz-conventional-changelog"
        }
    }
}
